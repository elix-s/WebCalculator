@model CalculatorApp.Models.CalculatorModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Калькулятор</title>
    <link rel="stylesheet" href="/css/site.css" />
</head>
<body>
    <div class="calculator">
        <h2>Калькулятор</h2>
        @if(!string.IsNullOrEmpty(Model.Message))
        {
            <div style="color:red;">@Model.Message</div>
        }
        
        <form method="post" asp-controller="Calculator" asp-action="Index">
            <input type="hidden" name="Operator" value="@Model.Operator" />
            <input type="text" class="display" name="Display" value="@Model.Display" readonly /><br />
            <table>
                <tr>
                    <td>
                        <table>
                            <tr>
                                <td><button type="submit" name="btn" value="7" class="btn">7</button></td>
                                <td><button type="submit" name="btn" value="8" class="btn">8</button></td>
                                <td><button type="submit" name="btn" value="9" class="btn">9</button></td>
                            </tr>
                            <tr>
                                <td><button type="submit" name="btn" value="4" class="btn">4</button></td>
                                <td><button type="submit" name="btn" value="5" class="btn">5</button></td>
                                <td><button type="submit" name="btn" value="6" class="btn">6</button></td>
                            </tr>
                            <tr>
                                <td><button type="submit" name="btn" value="1" class="btn">1</button></td>
                                <td><button type="submit" name="btn" value="2" class="btn">2</button></td>
                                <td><button type="submit" name="btn" value="3" class="btn">3</button></td>
                            </tr>
                            <tr>
                                <td><button type="submit" name="btn" value="0" class="btn">0</button></td>
                                <td><button type="submit" name="btn" value="." class="btn">,</button></td>
                                <td><button type="submit" name="btn" value="=" class="btn">=</button></td>
                            </tr>
                            <tr>
                                <td> <button type="submit" name="btn" value="Cancel" class="btn">C</button></td>
                            </tr>
                        </table>
                    </td>
                    <td>
                        <table>
                            <tr>
                                <td><button type="submit" name="btn" value="+" class="btn operator-btn">+</button></td>
                            </tr>
                            <tr>
                                <td><button type="submit" name="btn" value="-" class="btn operator-btn">–</button></td>
                            </tr>
                            <tr>
                                <td><button type="submit" name="btn" value="*" class="btn operator-btn">×</button></td>
                            </tr>
                            <tr>
                                <td><button type="submit" name="btn" value="/" class="btn operator-btn">÷</button></td>
                            </tr>
                            <tr>
                                <td><button type="submit" name="btn" value="%" class="btn operator-btn">%</button></td>
                            </tr>
                            <tr>
                                <td><button type="submit" name="btn" value="√" class="btn operator-btn">√</button></td>
                            </tr>
                            <tr>
                                <td><button type="submit" name="btn" value="^" class="btn operator-btn">^</button></td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
           <button type="submit" name="btn" value="undo" class="btn control-btn">Отмена действия</button>
        </form>
    </div>
</body>
</html>